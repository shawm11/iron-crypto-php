{
    "name": "shawm11/iron-crypto",
    "description": "PHP implementation of the iron cryptographic utility",
    "type": "library",
    "license": "MIT",
    "version": "1.0.8",
    "require": {
        "php": ">=5.5.0"
    },
    "require-dev": {
        "php": ">=7.3.0",
        "codeception/assert-throws": "^1.0",
        "codeception/specify": "^2.0",
        "codeception/verify": "^3.2",
        "consolidation/robo": "^4.0",
        "phpstan/phpstan": "^1.10.0",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "Shawm11\\Iron\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shawm11\\Iron\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
